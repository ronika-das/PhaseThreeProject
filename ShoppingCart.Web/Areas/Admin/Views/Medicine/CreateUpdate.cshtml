@model ShoppingCart.DataAccess.ViewModels.MedicineVM

<form method="post" asp-action="CreateUpdate" enctype="multipart/form-data">
    <input type="hidden" asp-for="Medicine.Id"/>
    <div class="border p-3 mt-4">
        <div class="row pb-3">
            <h2 class="text-primary">@((Model.Medicine==null||Model.Medicine.Id==0)?"Create":"Update")</h2>
            <hr/>
        </div>
        <div asp-validation-summary=All></div>
        <div class="row mb-3">
            <label asp-for="Medicine.Name"></label>
            <input asp-for="Medicine.Name" class="form-control" />
            <span asp-validation-for="Medicine.Name" class="text-danger"></span>
        </div>

        <div class="row mb-3">
            <label asp-for="Medicine.Price"></label>
            <input asp-for="Medicine.Price" class="form-control" />
            <span asp-validation-for="Medicine.Price" class="text-danger"></span>
        </div>

        <div class="row mb-3">
            <label asp-for="Medicine.CategoryId"></label>
            <select asp-for="Medicine.CategoryId" asp-items="@Model.Categories">
                <option selected disabled>--Select Category</option>
            </select>
            <span asp-validation-for="Medicine.CategoryId" class="text-danger"></span>
        </div> 

        @if (Model.Medicine == null || Model.Medicine.Id == 0)
        {
            <button class="btn btn-primary" type="submit">Create</button>
        }
        else
        {
            <button class="btn btn-primary" type="submit">Update</button>
        }



    </div>
    <a asp-action="Index" asp-Controller="medicine">Back to List</a>
</form>


@section scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}