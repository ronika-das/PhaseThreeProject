<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Medicine Name</th>
            <th>Medicine Price</th>  
            <th>Medicine Category</th>  
            <th>Medicine Description</th> 
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
     @foreach (var item in @Model)
        {

            <tr>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Category.Name</td>
                <td>@item.Description</td>
            
         
           
                <td role="group">
                    <a asp-action="CreateUpdate" asp-controller="medicine" asp-route-id="@item.Id"><i class="bi bi-pencil-square"/>Edit</a>
                    <a asp-action="Delete" asp-controller="medicine" asp-route-id="@item.Id"><i class="bi bi-trash"/>Delete</a>
                   
                </td>
            </tr>
        }
    </tbody>
</table>

@section scripts{
    <script src="~/js/Medicine.js"></script>
}