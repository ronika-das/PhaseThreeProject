@model ShoppingCart.Models.Cart
<h1>Medicine Details</h1>
<form method="post">
    <div class="row">
        <div class="col-4">
            <input type="hidden" asp-for="MedicineId" />
        </div>
        <div class="col-8">
            <div class="row">
                <label asp-for="Medicine.Name">Medicine Name: @Model.Medicine.Name</label>
                <label asp-for="Medicine.Description">Medicine Description: @Model.Medicine.Description</label>
                <label asp-for="Medicine.Price">Medicine Price: @Model.Medicine.Price</label>
                <label asp-for="Medicine.Category.Id">Medicine Category: @Model.Medicine.Category.Name</label>
                <div class="form-control">
                    <label asp-for="Count"></label>
                    <input asp-for="Count" class="form-control" />
                    <span asp-validation-for="Count" class="text-danger"></span>
                </div>
                <div class="form-control">
                    <button class="btn btn-success" asp-action="Index" asp-controller="Home">Back to List</button>
                    <button type="submit" class="btn btn-dark">Add to Cart</button>
                </div>
            </div>
        </div>

    </div>
</form>